<div class="container">
 <div class="row">
  <div class="col-md-3">
    <h1>User info</h1>
    <div>
      <div>
      <%= image_tag @user.get_profile_image(100,100) %>
      </div>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
           <th>name</th>
           <th><%=@user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%=@user.introduction %></th>
          </tr>
        </tbody>
      </table>
     </div>
     
      <%= link_to edit_user_path(@user.id) do %>
       <div class="btn btn-outline-secondary btn-lg btn-block">
        <i class="fas fa-user-cog"></i>
       </div>
      <% end %>
     
 
   <h1>New book</h1>
     <% if @new_book.errors.any? %>
     <div class="text-danger">
     <%= @new_book.errors.count %>error prohibited this obj from being saved:
     </div>
      <ul>
      <% new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
     <% end %>
 
  <%= form_with model:@new_book do |f| %>


  <h3>Title</h3>
   <%= f.text_field :title %>
   
  <h3>Opinion</h3>
   <%= f.text_area :body %>
    <div class="create-btn">
    <%= f.submit 'Create Book',class:"btn btn-success" %>
    </div>
  <% end %>
 </div>
 


   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
     <table class="table table-hover table-inverse">
      
      <tbody>
       <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
        <%= link_to @user.name, user_path(@user.id) %></td>
        <td><%= link_to @book.title,book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user == current_user %>
        <td><%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-success" %></td>
        <td> <%= link_to "Destroy",book_path(@book.id),method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn btn-danger" %></td><br>
       </tr> 
        <% end %>
      </tbody>
      </table>
   </div>
  </div>
 </div>
</div>

  